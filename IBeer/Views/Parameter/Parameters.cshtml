@model List<IBeerCore.Entities.Parameter>
@{
    ViewBag.Title = "Parameters";
}

<h2>Parameters</h2>
<br />
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Parametro</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var parameter in Model)
                {
                <tr>
                    <td>@parameter.Description</td>
                    @if (parameter.Value == "1")
                    {
                        <td>Mínimo</td>
                    }
                    @if (parameter.Value == "2")
                    {
                        <td>Médio</td>
                    }
                    @if (parameter.Value == "3")
                    {
                        <td>Máximo</td>
                    }
                    @if (parameter.Value == "False")
                    {
                        <td>Não</td>
                    }
                    @if (parameter.Value == "True")
                    {
                        <td>Sim</td>
                    }
                    <td>@Html.ActionLink("Edit", "Parameter", new { id = parameter.Id })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
